<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rent-House</title>
    <link rel="icon" type="image/png" href="https://media.discordapp.net/attachments/842222899104186382/1042097362258100244/casita.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/text-home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppRH.styles.css" asp-append-version="true" />


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/casita2.png" alt="logo" class="logo-navbar"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{                     
                            if(User.Identity.IsAuthenticated){
                                    <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Houses" asp-action="Index">Casas</a>
                                    </li> 
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">Clientes</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Rentals" asp-action="Index">Alquileres</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Returns" asp-action="Index">Devoluciones</a>
                                    </li>
                                    <li class="nav-item">
                                            <a class="btn btn-outline-danger" asp-area="Identity" asp-page="/Account/Logout">Cerrar perfil</a>
                                    </li>
                            }
                            else{
                                    <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Houses" asp-action="Index">Casas</a>
                                    </li>
                                    <li class="nav-item espacio-authorize">
                                    <a class="btn btn-outline-dark " asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
                                    </li>
                            }
                       }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white">
        <div class="container">
            &copy; 2022 - AppRH - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/rentalshouse.js"></script>
    <script src="~/js/return-house.js"></script>
    <script src="~/js/sweetalert2.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
